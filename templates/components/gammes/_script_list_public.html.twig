 <script>
fetch('/api/gammes')
  .then(r => r.json())
  .then(data => {
    const list = document.getElementById('gamme-public-list');

    data
      .filter(g => g.isActive)
      .forEach(g => {
        list.innerHTML += `
          <div class="col-md-4 mb-3">
            <div class="card h-100 border-secondary">
              <div class="card-body text-center">
                <h5>${g.name}</h5>
                <p class="text-muted">${g.description ?? ''}</p>
              </div>
            </div>
          </div>`;
      });
  });
</script>

