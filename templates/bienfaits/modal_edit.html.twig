	<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true"> <div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">

			<div class="modal-header">
				<h5 class="modal-title">Modifier un bienfait</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>

			<div class="modal-body">

				<input type="hidden" id="editId">

				<label class="form-label fw-semibold">Description :</label>
				<textarea id="editDescription" class="form-control mb-3"></textarea>

				<label class="form-label fw-semibold">Produits associés :</label>
				<select id="editProducts" class="form-select" multiple>
					{% for product in products %}
						<option value="{{ product.id }}">{{ product.name }}</option>
					{% endfor %}
				</select>

			</div>

			<div class="modal-footer">
				<button class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
				<button class="btn btn-success" onclick="updateBienfait()">Mettre à jour</button>
			</div>

		</div>
	</div>
</div>

