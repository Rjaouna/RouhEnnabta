{% endblock %}

{% block body %}
<h1 class="mb-4">Tableau de bord</h1>



<div class="row g-4">


{# ✅ CATÉGORIES #}


		<div class="col-md-4">
<a href="{{ path('admin_category_index') }}" class="text-decoration-none">


				<div class="card h-100 shadow-sm border-primary">
					<div class="card-body text-center">
<i class="bi bi-folder fs-2 text-primary"></i>
<h5 class="mt-3">Catégories</h5>
<p class="text-muted mb-0"></p>


							Gérer les catégories
						</p>
					</div>
				</div>
			</a>
		</div>

{# ✅ GAMMES #}


		<div class="col-md-4">
<a href="{{ path('admin_gammes_index') }}" class="text-decoration-none">


				<div class="card h-100 shadow-sm border-success">
					<div class="card-body text-center">
<i class="bi bi-grid fs-2 text-success"></i>
<h5 class="mt-3">Gammes</h5>
<p class="text-muted mb-0"></p>


							Gérer les gammes
						</p>
					</div>
				</div>
			</a>
		</div>

{# ✅ PRODUITS #}


		<div class="col-md-4">
<a href="{{ path('admin_product_index') }}" class="text-decoration-none">


				<div class="card h-100 shadow-sm border-warning">
					<div class="card-body text-center">
<i class="bi bi-box-seam fs-2 text-warning"></i>
<h5 class="mt-3">Produits</h5>
<p class="text-muted mb-0"></p>


							Gérer les produits
						</p>
					</div>
				</div>
			</a>
		</div>

{# ✅ MESSAGES CONTACT #}
<div class="col-md-4">
	<a href="{{ path('admin_contacts') }}" class="text-decoration-none">


		<div class="card h-100 shadow-sm border-danger position-relative">
			<div class="card-body text-center">
				<i class="bi bi-envelope fs-2 text-danger"></i>
				<h5 class="mt-3">Messages</h5>
				<p class="text-muted mb-0">
					Messages de contact
				</p>

				{% if unreadMessages > 0 %}
					<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
						{{ unreadMessages }}
					</span>
				{% endif %}
			</div>
		</div>
	</a>
</div>


	</div>
{% endblock %}

