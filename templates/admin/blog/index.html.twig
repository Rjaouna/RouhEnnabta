{% extends 'layouts/admin.html.twig' %}

{% block title %}Gestion du blog
{% endblock %}

{% block body %}
	<div class="container mt-4">

		<div class="d-flex justify-content-between align-items-center mb-3">
			<h1>Articles du blog</h1>
			<button class="btn btn-primary" onclick="openCreateModal()">
				âž• Ajouter un article
			</button>
		</div>

		<div id="blog-list"></div>
	</div>

	{# ===== MODAL CREATE / EDIT ===== #}
	<div class="modal fade" id="blogModal" tabindex="-1">
		<div class="modal-dialog modal-lg">
			<form class="modal-content" id="blog-form">
				<div class="modal-header">
					<h5 class="modal-title" id="modal-title">Nouvel article</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>

				<div class="modal-body">
					<input type="hidden" id="blog-id">

					<div class="mb-3">
						<label>Titre</label>
						<input type="text" id="name" class="form-control" required>
					</div>

					<div class="mb-3">
						<label>Contenu</label>
						<textarea id="content" class="form-control" rows="5"></textarea>
					</div>

					<div class="mb-3">
						<label>Image</label>
						<input type="file" id="imageFile" class="form-control">
					</div>

					<div class="form-check">
						<input type="checkbox" id="isActive" class="form-check-input">
						<label class="form-check-label">Actif</label>
					</div>
				</div>

				<div class="modal-footer">
					<button class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
					<button class="btn btn-primary">Enregistrer</button>
				</div>
			</form>
		</div>
	</div>

	{# ===== MODAL SHOW ===== #}
	<div class="modal fade" id="showModal" tabindex="-1">
		<div class="modal-dialog modal-lg">
			<div class="modal-content p-4" id="show-content"></div>
		</div>
	</div>

{% endblock %}

{% block javascript %}
	 <script src="{{ asset('js/blog.js') }}"></script>
{% endblock %}

