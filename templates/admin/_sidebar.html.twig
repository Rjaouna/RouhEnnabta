			<a href="{{ path('admin_gammes_index') }}" class="nav-link {{ app.request.get('_route') starts with 'admin_gammes' ? 'active' }}">
				<span>
					<i class="bi bi-grid"></i>
					Gammes
				</span>
			</a>
		</li>

		<li>
			<a href="{{ path('admin_product_index') }}" class="nav-link {{ app.request.get('_route') starts with 'admin_product' ? 'active' }}">
