<style>
	.admin-sidebar {
		width: 250px;
		background-color: #1f1f1f;
		color: #fff;
	}

	.admin-sidebar h4 {
		font-size: 1.1rem;
		letter-spacing: 0.5px;
	}

	.admin-sidebar .nav-link {
		color: rgba(255, 255, 255, .8);
		padding: 0.55rem 0.75rem;
		border-radius: 0.375rem;
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.admin-sidebar .nav-link:hover {
		background-color: rgba(255, 255, 255, .08);
		color: #fff;
	}

	.admin-sidebar .nav-link.active {
		background-color: rgba(255, 255, 255, .12);
		color: #fff;
		font-weight: 600;
	}

	.admin-sidebar .badge {
		font-size: 0.7rem;
	}

	.admin-sidebar hr {
		border-color: rgba(255, 255, 255, .15);
	}
</style>

<aside class="admin-sidebar vh-100 p-3 d-flex flex-column">

	<h4 class="mb-4 fw-semibold">
		Back-Office
	</h4>

	<ul class="nav flex-column gap-1 flex-grow-1">

		<li>
			<a href="{{ path('admin_dashboard') }}" class="nav-link {{ app.request.attributes.get('_route') == 'admin_dashboard' ? 'active' }}">
				<i class="bi bi-speedometer2"></i>
				Dashboard
			</a>
		</li>

		<li>
			<a href="{{ path('admin_category_index') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'admin_category' ? 'active' }}">
				<i class="bi bi-folder"></i>
				Catégories
			</a>
		</li>

		<li>
			<a href="{{ path('admin_gammes_index') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'admin_gammes' ? 'active' }}">
				<i class="bi bi-grid"></i>
				Gammes
			</a>
		</li>

		<li>
			<a href="{{ path('admin_product_index') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'admin_product' ? 'active' }}">
				<i class="bi bi-box-seam"></i>
				Produits
			</a>
		</li>

		{# ✅ BLOG #}
		<li>
			<a href="{{ path('admin_blog_page') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'admin_blog' ? 'active' }}">
				<i class="bi bi-journal-text"></i>
				Blog
			</a>
		</li>

		{# ✅ MESSAGES #}
		<li>
			<a href="{{ path('admin_contacts') }}" class="nav-link d-flex justify-content-between align-items-center
									   {{ app.request.attributes.get('_route') starts with 'admin_contact' ? 'active' }}">

				<span class="d-flex align-items-center gap-2">
					<i class="bi bi-envelope"></i>
					Messages
				</span>

				{% if unreadMessages is defined and unreadMessages > 0 %}
					<span class="badge bg-danger rounded-pill">
						{{ unreadMessages }}
					</span>
				{% endif %}
			</a>
		</li>

		<hr class="my-3">

		<li>
			<a href="{{ path('app_home') }}" class="nav-link">
				<i class="bi bi-globe"></i>
				Voir le site
			</a>
		</li>

	</ul>

	<div class="mt-auto">
		<a href="{{ path('app_logout') }}" class="nav-link text-danger">
			<i class="bi bi-box-arrow-right"></i>
			Déconnexion
		</a>
	</div>

</aside>

