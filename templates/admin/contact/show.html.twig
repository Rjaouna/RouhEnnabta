{% extends 'layouts/admin.html.twig' %}


{% block title %}Message
{% endblock %}

{% block body %}
	<div class="container py-4">

		<a href="{{ path('admin_contacts') }}" class="btn btn-link mb-3">
			← Retour à la liste
		</a>

		<div class="card shadow-sm border-0">
			<div class="card-body">

				<h4 class="fw-bold mb-3">{{ contact.subject }}</h4>

				<p class="mb-1">
					<strong>Nom :</strong>
					{{ contact.name }}
				</p>

				<p class="mb-3">
					<strong>Email :</strong>
					<a href="mailto:{{ contact.email }}">{{ contact.email }}</a>
				</p>

				<hr>

				<p style="white-space: pre-line;">
					{{ contact.message }}
				</p>

			</div>
		</div>

	</div>
{% endblock %}

