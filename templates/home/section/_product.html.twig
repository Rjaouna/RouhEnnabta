    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.2rem;
    background: #fff;
    border-radius: 16px;
    text-decoration: none;
    color: #3F3A2C;
    font-weight: 500;
    text-align: center;
    transition: all .35s ease;
    min-height: 120px;
}

.category-card img {
    width: 42px;
    margin-bottom: .6rem;
}

