<div class="section-divider my-5 text-center flex-column">


	<h3 class="fw-bold text-success">
		Nos gammes authentiques
	</h3>

	<div class="d-flex align-items-center gap-3">
		<span class="divider-line"></span>
		<i class="bi bi-leaf-fill"></i>
		<span class="divider-line"></span>
	</div>
</div>




<section class="py-5 bg-light container rounded-4  shadow-sm">
	<div class="container">

		<div
			class="row align-items-center">

			
{# ================= CATEGORIES DATA ================= #}
{% set categories = [
	['Agrumes', 'agrumes.png', '320'],
	['Fleurs', 'fleur.png', '317'],
	['Plantes', 'plante.png', '323'],
	['Herbacées', 'the.png', '322'],
	['Épices', 'epices.png', '318'],
	['Aiguilles', 'romarin.png', '321'],
	['Médicinales', 'herbes-medicinales.png', '324'],
	['Fruits', 'des-legumes.png', '325']
] %}

<div class="container my-5">
	<div
		class="row align-items-center">

		{# ================= COLONNE GAUCHE (DESKTOP) ================= #}
		<div class="col-lg-4 order-lg-1 d-none d-lg-block">
			<div class="row g-3">
				{% for cat in categories|slice(0,4) %}
					<div class="col-6">
<a href="{{ path('gamme_show', { id: cat[2] }) }}" class="category-card">



							<img src="{{ asset('uploads/gammes/' ~ cat[1]) }}" alt="{{ cat[0] }}">
							<span>{{ cat[0] }}</span>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>

<!-- COLONNE CENTRALE -->
<div class="col-lg-4 order-lg-2 text-center mb-4 mb-lg-0">
	<h4 class="fw-semibold text-primary  mb-2">
		Une sélection pensée pour chaque besoin
	</h4>
	<p class="text-muted mb-3">
		Des gammes élaborées à partir de produits du terroir, certifiés et respectueux du savoir-faire local.
	</p>

	<a href="#" class="btn btn-outline-success rounded-pill px-4 d-none d-lg-inline-flex align-items-center gap-2">
		Voir plus
		<i class="bi bi-arrow-right"></i>
	</a>
</div>


		{# ================= COLONNE DROITE (DESKTOP) ================= #}
		<div class="col-lg-4 order-lg-3 d-none d-lg-block">
			<div class="row g-3">
				{% for cat in categories|slice(4,4) %}
					<div class="col-6">
<a href="{{ path('gamme_show', { id: cat[2] }) }}" class="category-card">

							<img src="{{ asset('uploads/gammes/' ~ cat[1]) }}" alt="{{ cat[0] }}">
							<span>{{ cat[0] }}</span>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>

	</div>

	{# ================= MOBILE GRID (MÊMES BLOCS) ================= #}
	<div class="d-lg-none mt-4">
		<div class="row g-3">
			{% for cat in categories %}
				<div class="col-6">
					<a href="#" class="category-card">
						<img src="{{ asset('uploads/gammes/' ~ cat[1]) }}" alt="{{ cat[0] }}">
						<span>{{ cat[0] }}</span>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</div>


</section>

<style>
.section-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
color: #8FB397;

}

