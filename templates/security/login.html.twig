{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container-fluid bg-light">
		<div class="row py-5 align-items-center justify-content-center">

			<div class="col-12 col-sm-10 col-md-6 col-lg-4">

				<div class="card border-0 shadow">
					<div class="card-body p-4 p-md-5">

						<div class="text-center mb-4">
							<i class="bi bi-person-circle fs-1 text-secondary mb-3"></i>
							<h4 class="fw-semibold mb-1">Accès à votre espace</h4>
							<p class="text-muted small">
								Connexion sécurisée à votre compte
							</p>
						</div>

						{% if error %}
							<div class="alert alert-danger small">
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						{% endif %}

						{% if app.user %}
							<div class="alert alert-info small">
								Vous êtes connecté en tant que
								<strong>{{ app.user.userIdentifier }}</strong>.
								<a href="{{ logout_path() }}" class="text-decoration-underline">
									Déconnexion
								</a>
							</div>
						{% endif %}

						<form method="post" action="{{ path('app_login') }}">

							<div class="mb-3">
								<label for="inputEmail" class="form-label small">Adresse email</label>
								<input type="email" name="_username" id="inputEmail" class="form-control" value="{{ last_username }}" required autocomplete="email" autofocus>
							</div>

							<div class="mb-3">
								<label for="inputPassword" class="form-label small">Mot de passe</label>
								<input type="password" name="_password" id="inputPassword" class="form-control" required autocomplete="current-password">
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="d-flex justify-content-between align-items-center mb-4">
								<div class="form-check">
									<input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me">
									<label class="form-check-label small" for="remember_me">
										Se souvenir de moi
									</label>
								</div>

								<a href="#" class="small text-decoration-none">
									Mot de passe oublié
								</a>
							</div>

							<div class="d-grid">
								<button class="btn btn-primary py-2" type="submit">
									Connexion
								</button>
							</div>
						</form>

						<hr class="my-4">

						<div class="text-center">
							<p class="text-muted small mb-3">
								Vous ne disposez pas encore d’un accès ?
							</p>

							<div class="d-grid gap-2">
								<a href="#" class="btn btn-outline-secondary">
									Créer un compte
								</a>

								<a href="#" class="btn btn-outline-dark">
									Devenir franchisé
								</a>
							</div>
						</div>

					</div>
				</div>

				<p class="text-center text-muted small mt-4">
					©
					{{ "now"|date("Y") }}
					— Accès sécurisé
				</p>

			</div>

		</div>
	</div>
{% endblock %}

